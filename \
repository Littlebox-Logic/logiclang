#ifndef LOGIC_LOG_H
#define LOGIC_LOG_H

#include <stdio.h>

#define ERROR	-1
#define INFO	 0
#define WARN	 1
#define DEBUG	 2

#define Log(level, log_str, lineindex, colindex, ...)	fprintf(stderr, "logicc: \033[;%dm%s\033[0m: line: %zu col: %zu: \033[;97m" log_str "\033[0m\n", level + 92, #level, lineindex, colindex, ##__VA_ARGS__)
#define Msg(level, log_str, ...)	fprintf(stderr, "logicc: \033[;%dm%s\033[0m: \033[;97m" log_str "\033[0m\n", level + 92, #level, ##__VA_ARGS__)

#endif
